<tr id="new-orchid-<%= @random_id %>" 
  class="new-record new-orchid"  
  data-record-type="orchid"
  data-edit-url="<%= new_orchid_with_random_id_path(@random_id) %>"
  tabindex="<%= increment_tab_index(100) %>"
    >
  <td class="checkbox-container">
    <div
      class="stylish-checkbox acts-as-checkbox nsl-inline-block stylish-checkbox-unchecked" 
      tabindex="<%= increment_tab_index(1) %>"
      dir="ltr" 
      role="checkbox" 
      data-checked="false"> 
    </div>
  </td> 
  <td class="nsl-tiny-icon-container takes-focus width-1-percent"><%= record_icon('orchid') %></td>
  <td class="text takes-focus name main-content min-width-40-percent max-width-100-percent width-90-percent give-me-focus" colspan="9">
    <%= link_to('New orchid', new_orchid_with_random_id_path(@random_id,tabIndex: increment_tab_index(0) + 5), 
                class: "show-details-link", 
                tabindex: "#{ increment_tab_index }", 
                title: "New orchid record.  Select to see details.",
                remote: true) %>
  </td>
  <td class="takes-focus width-5-percent filler">&nbsp;</td>
</tr>

<script>$('tr#new-orchid-<%= @random_id %> a.show-details-link').click();</script>

