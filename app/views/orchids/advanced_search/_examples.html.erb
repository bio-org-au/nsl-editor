      {search_target: 'Orchids', search_string: "hybrid-has-value: ",explanation: %Q(Hybrid field has a value)},
      {search_target: 'Orchids', search_string: "hybrid-has-no-value: ",explanation: %Q(Hybrid field has no value)},
      {search_target: 'Orchids', search_string: "hybrid-level-has-value:",explanation: %Q(Hybrid level field has a value)},
      {search_target: 'Orchids', search_string: "hybrid-level-has-no-value:",explanation: %Q(Hybrid level field has no value)},
      {search_target: 'Orchids', search_string: "hybrid-level: genus",explanation: %Q(Hybrid field matches 'genus')},
      {search_target: 'Orchids', search_string: "hybrid-has-value: hybrid-level-has-value:",explanation: %Q(Hybrid field has no value)},
      ].each do |val| %>
  <tr>
    <td class="width-30-percent">
      <%= link_to(val[:search_string], search_path(query_string: val[:search_string], query_target: val[:search_target]),class:'blue', title: "Run the described search.") %>
    </td>
    <td><%= val[:explanation].html_safe %></td>
  </tr>
  <% end %>
</table>

