<div class="focus-details 
            <%#= 'freshly-created' if Time.now.strftime("%Y%m%d") == @orchid.created_at.strftime("%Y%m%d") &&  (@orchid.created_at - @orchid.updated_at).abs < 10 %>">
  <% tab_tab_index = @tab_index %>
  <% if notice %>
    <p id="notice"><%= notice %></p>
  <% end %>
  <div class="inner">
    <h3>
      <%= link_to(@orchid.taxon, 
                  search_path(query_target: 'orchid', 
                              query_string: "id:#{@orchid.id}"),
                  id: 'tab-heading',
                  title: "Query this orchid record") %>
    </h3>
    <%= render partial: 'tabs' %>
    <%= render partial: "#{@tab}" %>
    <br>
    <span class='server-response-time'><%= "(#{(Time.now - @start_time).round(2)}s)" if @start_time %></span>

  </div><!-- /end .inner -->
</div><!-- /end .focus-details -->
