
<%= link_to("#{@instance.name.try('full_name')} #{search_icon_on_tab}".html_safe,search_path(query_target: 'name', query_string: "id: #{@instance.name_id} show-instances:"), title: 'Search for the name with its instances',class: 'name') %>
  <%= " [#{@instance.name.try('name_status').try('name_without_brackets')}]" if @instance.try('name').try('name_status').try('legitimate?') %>

  <% if @instance.name.try('apc?') %>
    <%= render(partial: 'instances/apc/widgets', locals: {instance: @instance}) %>
  <% end %>
  &nbsp;
  <%= link_to("#{ShardConfig.name_space}&nbsp;#{icon('external-link-square')}".html_safe,
              "#{Rails.configuration.nsl_links}apni-format/display/#{@instance.name_id}",
              title: "#{ShardConfig.name_space} search. Opens in another named tab or window.",
              class: 'rebeccapurple',
              target: "_editor_to_apni",
              tabindex: increment_tab_index) %>
  <br>
  appears in
  <br>
  <%= link_to("#{@instance.reference.citation} #{search_icon_on_tab}".html_safe, search_path(query_string: "id: #{@instance.reference_id}", query_target: 'reference'),title: "Search for the reference.",class: 'ref') %>
  <%= link_to("(with instances)", search_path(query_string: "id: #{@instance.reference_id} show-instances:", query_target: 'references'),title: "Search for the reference its instances.") %>
  <br>
  as <%= @instance.instance_type.name_with_indefinite_article.sub(/ /,'<br>').html_safe %>
  <%= "<br>on page #{@instance.page}".html_safe if @instance.page.present? %>
  <%= "<br>with verbatim name #{@instance.verbatim_name_string}".html_safe if @instance.verbatim_name_string.present? %>
  <br>
  <%= link_to("and BHL entry #{icon('external-link')}".html_safe,@instance.bhl_url, title: "Follow this link to the BHL entry.") if @instance.bhl_url.present? %>
  <br>
  <%= "[DRAFT]" if @instance.draft? %>

