  <% @orchid.names_simple_name_matching_taxon.each_with_index do |matching_name, index| %>
    <%  if index > 0 %><br><% end %>
    <br>
    <b>
    <%= "#{matching_name.full_name} #{matching_name.name_status.name_for_instance_display}" %>
    </b>
    <% if OrchidsName.where(name_id: matching_name.id).where.not(orchid_id: @orchid.id).size > 0 %>
    <br>
     Already the preferred match for:
     <ul>
       <b>
       <% matching_name.orchid_ids.each do |orchid| %>
         <li><%= link_to(orchid.taxon,search_path(query_target: "orchids", query_string: "id:#{orchid.id}"),
                         title: "See #{orchid.taxon}",
                         class: 'underline') %>
       <% end %>
       </b>
     </ul>
     <br>
    <% end %>
     | <%= link_to('query name', search_path(query_string: "id: #{matching_name.id} show-instances:",query_target: 'names'),
                      tabindex: increment_tab_index,
                      title: "Search for #{matching_name.full_name}",
                      class: '') %>


<% i_count = 0 %>
<%= form_for(@orchid, as: 'orchid', role: 'form', remote: true) do |f| %>
  <% @orchid.name_id = matching_name.id %>
  <%= f.text_field(:name_id) %>
  <%= f.text_field(:taxon) %>
  <!-- <input id="orchid_instance_id" name="orchid[instance_id]" type="hidden" value="0" >-->
  <br>
  <% matching_name.instances.sort{|x,y| x.reference.iso_publication_date <=> y.reference.iso_publication_date}.each do |instance| %>
      <% unless instance.instance_type.relationship? %>
        <%  if i_count > 0 %><br><% end %>
        <% i_count += 1 %>
        <%= f.check_box(:instance_id) %>
        <!--<input id="<%#= instance.id %>" name="orchid[instance_id]" type="checkbox" value="<%#=instance.id%>" <%#= 'checked' if @orchid.orchids_name.collect(&:instance_id).include?(instance.id) %> > -->
        <%= instance.reference.citation %>
        <%= instance.id %>
        <% end %>
      <% end %>
      <% if i_count > 0 %>
        <br>
        <%= f.submit "Save", id: 'save-orchid', tabindex: increment_tab_index, title: 'Save changes', class: 'btn btn-primary width-5em', disabled: false %>
      <% else %>
        <% if name_match_count > 0 %>
          [No non-relationship instances.]
        <% end %>
      <% end %>

   <% end %>
 <% end %>
