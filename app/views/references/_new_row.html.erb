<tr id="new-reference-<%= @random_id %>" 
  class="new-record new-reference"  
  data-record-type="reference"
  data-edit-url="<%= new_reference_path(@random_id) %>"
  tabindex="<%= increment_tab_index(100) %>"
    >
  <td class="nsl-tiny-icon-container takes-focus width-1-percent"><%= record_icon('reference') %></td>
  <td class="text takes-focus reference main-content min-width-40-percent max-width-100-percent width-90-percent give-me-focus" colspan="9">
    <%= link_to("New reference (#{@random_id})", new_reference_path(random_id: @random_id, tabIndex: increment_tab_index(0) + 5), 
                class: "show-details-link", 
                tabindex: "#{ increment_tab_index }", 
                title: "New reference record.  Select to show details.",
                remote: true) %>
  </td>
  <td class="takes-focus width-5-percent filler">&nbsp;</td>
</tr>

<script>$('tr#new-reference-<%= @random_id %> a.show-details-link').click();</script>

